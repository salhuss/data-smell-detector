<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Data Smell Report</title>
  <style>
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; margin: 24px; line-height: 1.45; }
    h1, h2 { margin: 0.2em 0; }
    code, pre { background: #f6f8fa; padding: 2px 6px; border-radius: 6px; }
    .card { border: 1px solid #e5e7eb; border-radius: 12px; padding: 16px; margin: 12px 0; }
    .bad { color: #b91c1c; }
    .warn { color: #b45309; }
    .ok { color: #065f46; }
    table { border-collapse: collapse; width: 100%; }
    th, td { border: 1px solid #eee; padding: 6px 8px; text-align: left; }
    ul { margin: 0.3em 0 0.3em 1.2em; }
  </style>
</head>
<body>
  <h1>Data Smell Report</h1>
  <div>Rows Ã— Cols: <b>{{ r.basic.shape[0] }}</b> Ã— <b>{{ r.basic.shape[1] }}</b></div>

  <div class="card">
    <h2>Quick Suggestions</h2>
    {% if r.suggestions %}
      <ul>{% for s in r.suggestions %}<li>{{ s }}</li>{% endfor %}</ul>
    {% else %}
      <div class="ok">No major smells detected ðŸŽ‰</div>
    {% endif %}
  </div>

  <div class="card">
    <h2>Missingness</h2>
    <div>Overall missing fraction: <b>{{ '%.3f' % r.missingness.overall_frac }}</b></div>
    {% if r.missingness.by_col %}
    <table>
      <thead><tr><th>Column</th><th>Missing frac</th></tr></thead>
      <tbody>
      {% for c, v in r.missingness.by_col.items() %}
        <tr><td>{{ c }}</td><td>{{ '%.3f' % v }}</td></tr>
      {% endfor %}
      </tbody>
    </table>
    {% else %}
      <div class="ok">No missing values</div>
    {% endif %}
  </div>

  <div class="card">
    <h2>Duplicates</h2>
    <div>Duplicates: <b>{{ r.dupes.duplicates }}</b> ({{ '%.2f' % (r.dupes.frac * 100) }}%)</div>
  </div>

  <div class="card">
    <h2>Skew / Kurtosis (numeric)</h2>
    {% if r.skew_kurt %}
      <table>
        <thead><tr><th>Column</th><th>Skew</th><th>Kurtosis</th></tr></thead>
        <tbody>{% for x in r.skew_kurt %}<tr><td>{{ x.column }}</td><td>{{ '%.3f' % x.skew }}</td><td>{{ '%.3f' % x.kurtosis }}</td></tr>{% endfor %}</tbody>
      </table>
    {% else %}
      <div class="ok">No highly skewed/heavy-tailed numeric features detected</div>
    {% endif %}
  </div>

  <div class="card">
    <h2>Outliers (IQR > 10%)</h2>
    {% if r.outliers %}
      <table><thead><tr><th>Column</th><th>Outlier frac</th></tr></thead>
      <tbody>{% for x in r.outliers %}<tr><td>{{ x.column }}</td><td>{{ '%.3f' % x.outlier_frac }}</td></tr>{% endfor %}</tbody></table>
    {% else %}
      <div class="ok">No heavy outlier columns flagged</div>
    {% endif %}
  </div>

  <div class="card">
    <h2>High Cardinality (categorical)</h2>
    {% if r.high_cardinality %}
      <ul>{% for x in r.high_cardinality %}<li>{{ x.column }} â€” {{ x.unique }} uniques (rows={{ x.rows }})</li>{% endfor %}</ul>
    {% else %}
      <div class="ok">No high-cardinality categoricals flagged</div>
    {% endif %}
  </div>

  <div class="card">
    <h2>Constant Columns</h2>
    {% if r.constant_cols %}
      <ul>{% for x in r.constant_cols %}<li>{{ x.column }}</li>{% endfor %}</ul>
    {% else %}
      <div class="ok">No constant columns</div>
    {% endif %}
  </div>

  {% if r.target %}
  <div class="card">
    <h2>Target: {{ r.target.name }}</h2>
    <div>Class imbalance (max class ratio): <b>{{ '%.2f' % r.target.imbalance.max_ratio }}</b></div>
    {% if r.target.leakage %}
      <div class="bad">Potential leakage columns:</div>
      <ul>{% for l in r.target.leakage %}<li>{{ l.column }} ({{ l.type }}, score={{ l.score }})</li>{% endfor %}</ul>
    {% else %}
      <div class="ok">No obvious leakage detected</div>
    {% endif %}
  </div>
  {% endif %}

  <div class="card">
    <h2>Dtypes</h2>
    <table><thead><tr><th>Column</th><th>dtype</th></tr></thead>
    <tbody>
      {% for c, d in r.dtypes.items() %}
        <tr><td>{{ c }}</td><td><code>{{ d }}</code></td></tr>
      {% endfor %}
    </tbody>
    </table>
  </div>

  <p style="color:#6b7280">Generated by Data Smell Detector</p>
</body>
</html>
